<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/rl_main"
        android:layout_alignParentTop="true"
        android:background="@color/main_color"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ac_back_icon"
            android:src="@mipmap/icon_common_back"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="今日体征上报"
            android:textColor="@color/text_color_white"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:src="@mipmap/icon_common_history_list" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_detail"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list_physical_sign"
            android:layout_width="400dp"
            android:scrollbars="none"
            android:listSelector="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:divider="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="230dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_physical_sign_count"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_save_physical_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="上报"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="@color/main_color"/>


</RelativeLayout >