<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutNormal"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="药品"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txt_name_value"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColorHint="#1F6DAB"
            android:maxLength="12" >
        </EditText>

        <!--        android:hint="@string/main_PhysicalSign"-->
        <EditText
            android:id="@+id/txt_name_value_left"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColorHint="#1F6DAB"
            android:maxLength="12" />
        <TextView
            android:id="@+id/txt_split"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/txt_name_value_right"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColorHint="#1F6DAB"
            android:maxLength="12" />
        <TextView
            android:id="@+id/txt_unit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="用法"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>